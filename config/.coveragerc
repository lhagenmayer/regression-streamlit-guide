[run]
# Coverage collection configuration
source =
    src
    run.py

omit =
    # Test files
    */tests/*
    */test_*
    tests.py
    conftest.py

    # Generated files
    */__pycache__/*
    *.pyc
    *.pyo
    *.pyd

    # Build artifacts
    build/*
    dist/*
    *.egg-info/*

    # Virtual environments
    .venv/*
    venv/*
    env/*
    .env/*

    # IDE and tools
    .vscode/*
    .idea/*
    .mypy_cache/*
    .pytest_cache/*
    .tox/*
    htmlcov/*
    .coverage
    coverage.xml

    # Scripts and utilities
    scripts/*
    docs/*

    # Special files
    src/__init__.py

[report]
# Coverage reporting configuration
exclude_lines =
    # Don't report coverage for these lines
    pragma: no cover
    pragma: no-cov
    pragma: coverage-exclude

    # Standard exclusions
    def __repr__
    def __str__
    if self\.debug
    if settings\.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    if TYPE_CHECKING:

    # Framework-specific exclusions
    if st\._is_running_with_streamlit
    st\.(write|markdown|header|subheader)
    st\.(sidebar|main|container)
    st\.(session_state|cache_data|cache_resource)
    st\.(columns|tabs|expander)
    st\.(plotly_chart|line_chart|bar_chart|area_chart)
    st\.(dataframe|table|json|text)

    # Logging exclusions
    logger\.(debug|info|warning|error|critical)
    logging\.(debug|info|warning|error|critical)

    # Exception handling
    except ImportError:
    except ModuleNotFoundError:

    # Type checking
    if TYPE_CHECKING:
    from typing import

    # Test-specific code
    pytest\.raises
    pytest\.mark\.
    @pytest\.fixture

    # Development helpers
    if __name__ == "__main__":
    # TODO:
    # FIXME:
    # XXX:

[html]
# HTML coverage report configuration
directory = htmlcov
title = Linear Regression Guide - Coverage Report
show_contexts = true

[xml]
# XML coverage report configuration
output = coverage.xml

[json]
# JSON coverage report configuration
output = coverage.json
pretty_print = true

[paths]
# Path remapping for consistent coverage across environments
source =
    src/
    /app/src/
    ./src/

[coverage:run]
# Additional run configuration
branch = true
parallel = true
sigterm = true
source_pkgs =
    src

[coverage:paths]
# Path mapping for different environments
source =
    src
    */site-packages/src
    */dist-packages/src